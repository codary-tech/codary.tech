---
// Layout that extends Base and adds Footer
// For pages that need the standard footer

import Footer from "@/components/Footer.astro";
import Base from "@/layouts/Base.astro";

interface Props {
	title?: string;
	description?: string;
	ogImage?: string | URL;
	frontmatter?: undefined;
}

const { title, description, ogImage } = Astro.props.frontmatter || Astro.props;
---

<Base {title} {description} {ogImage}>
	<slot name="header" />
	<slot name="subheader" />
  <slot />
  <Footer />
</Base>
